<% if @holidays.present? %>
    <table id="holidays">
      <thead>
      <th>Absence Type</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th>Working days</th>
      <th>Status</th>
      <th>&nbsp;</th>
      </thead>
      <tbody>
      <% @holidays.each do |holiday| %>
          <%= create_absence_row(holiday) %>
      <% end %>
      </tbody>
    </table>
<% else %>
    <p>You have not booked any holidays.</p>
<% end %>
