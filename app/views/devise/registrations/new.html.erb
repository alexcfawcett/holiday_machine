<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.input :forename %>
        <%= f.input :surname %>
        <%= f.input :invite_code %>
        <%= f.association :user_type, :collection => UserType.all, :prompt => "Choose a user type" %>
        <%#= f.input :manager_id, :as => :select, :collection => User.where("user_type_id = 2"),
        :label_method => :full_name, :value_method => :id, :prompt => "Choose a manager" %>


        <%= f.button :submit, "Create my account", class: "btn btn-large btn-primary" %>

    <% end %>

    <p>Already registered? <%= link_to "Sign in now!", sign_in_path %></p>
  </div>
</div>