<% provide(:title, "My Settings") %>
<h1>My Settings</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

        <%#= devise_error_messages! %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.input :email, :autofocus => true, error: false %>
        <%= f.input :forename, error: false %>
        <%= f.input :surname, error: false %>
        <%= f.input :manager_id, :as => :select, :collection => User.active_managers,
                    :label_method => :full_name, :value_method => :id, 
                    :prompt => "Choose a manager", error: false %>
        <br />
        <%= f.input :password,  label: 'New password', error: false %>
        <%= f.input :password_confirmation, label: 'New password confirmation', error: false %>
        <%= f.input :current_password, error: false %>

        <%= f.button :submit, "Save changes", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>