<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Holiday Thyme", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
              <li><%= link_to "Home", root_path %><li>
              <li><%= link_to "Calendar", "/calendar" %></li>
              <% if current_user.is_manager? %>
                  <li id="fat-menu2" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Management <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Invitations", new_user_invitation_path %></li>
                      <li><%= link_to "Absences", administer_index_path %></li>
                      <li><%= link_to "Allowances", user_days_path %></li>
                      <li><%= link_to "Reports", reports_path %></li>
                    </ul>
                  </li>
              <% end %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Settings", edit_user_registration_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Sign Out", sign_out_path, method: "delete" %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign In", sign_in_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
